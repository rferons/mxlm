{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "lib": ["ES2021"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "types": ["node", "vitest/globals"]
  },
  "include": ["bin", "src", "test"],
  "exclude": ["dist", "cdk.out", "node_modules"]
}
