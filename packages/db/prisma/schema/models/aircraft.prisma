model Aircraft {
  id             String      @id @default(cuid())
  orgId          String
  tailNumber     String
  make           String
  model          String
  serialNumber   String?
  year           Int?
  timezone       String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  organization   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  components     Component[]
  events         MaintenanceEvent[]
  documents      Document[]
  embeddings     Embedding[] @relation("AircraftEmbeddings")
  compliance     ComplianceSnapshot[]
  dueItems       DueItem[]
  shares         Share[]

  @@unique([orgId, tailNumber])
  @@index([orgId, make, model])
}
